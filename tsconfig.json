{
  "compilerOptions": {
    "target": "es2015",                // Or higher like "es2020"
    "module": "esnext",                // Modern module support
    "outDir": "./dist",                // Where the JS output goes
    "rootDir": "./src",                // Where the TS files live
    "sourceMap": true,                 // Optional, for browser debugging

    "lib": ["dom", "es2015"],          // Use DOM + modern JS APIs
    "strict": true,                    // Strong typing
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],             // All TS files in src/
  "exclude": ["node_modules", "dist"]  // Skip dependencies + build output
}
